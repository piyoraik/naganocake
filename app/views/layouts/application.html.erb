<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="page-header">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <h1>Logo</h1>
        </nav>
        <nav class="nav navbar-nav navbar-right">
          <% if end_user_signed_in? %>
            <li><%= link_to 'マイページ', end_users_path %></li>
            <li><a href="#">カート一覧</a></li>
            <li><%= link_to "ログアウト",destroy_end_user_session_path, method: :delete %></li>
          <% else %>
            <li><a href="#">商品一覧</a></li>
            <li><%= link_to '新規登録', new_end_user_registration_path %></li>
            <li><%= link_to 'ログイン', end_user_session_path %></li>
          <% end %>
        </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
