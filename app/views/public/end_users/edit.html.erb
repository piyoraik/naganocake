<div class="container">
    <div class="row">
        <h3 class="col-xs-7 col-xs-offset-2 edit">登録情報編集</h3>
        <div class="col-xs-7 col-xs-offset-1">
            <%= form_for current_end_user do |f| %>
                <div class="field row">
                    <label class="col-xs-3">名前</label>
                    <em class="col-xs-1">(性)</em>
                    <%= f.text_field :first_name, class:"col-xs-3", autofocus: true %>
                    <em class="col-xs-1">(名)</em>
                    <%= f.text_field :last_name, class:"col-xs-3" %>
                </div>

                <div class="field row">
                    <label class="col-xs-3">フリガナ</label>
                    <em class="col-xs-1">(セイ)</em>
                    <%= f.text_field :first_name_kana, class:"col-xs-3" %>
                    <em class="col-xs-1">(メイ)</em>
                    <%= f.text_field :last_name_kana, class:"col-xs-3" %>
                </div>

                <div class="field row">
                    <label class="col-xs-4">メールアドレス</label>
                    <%= f.text_field :email, class:"col-xs-7" %>
                </div>

                <div class="field row">
                    <label class="col-xs-4">郵便番号(ハイフンなし)</label>
                    <%= f.text_field :postcode %>
                </div>

                <div class="field row">
                    <label class="col-xs-4">住所</label>
                    <%= f.text_field :address, class:"col-xs-8" %>
                </div>

                <div class="field row">
                    <label class="col-xs-4">電話番号(ハイフンなし)</label>
                    <%= f.text_field :phone_number %>
                </div>

                <div class="actions">
                    <div class="col-xs-4 col-xs-offset-2">
                        <%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
                    </div>
            <% end %>
                    <div class="col-xs-3 col-xs-offset-3">
                        <%= link_to "退会する", destroy_show_path, class:"btn btn-danger" %>
                    </div>
                </div>
        </div>
    </div>
</div>